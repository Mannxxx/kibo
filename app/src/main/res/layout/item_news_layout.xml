<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="STATE TREE AUTHORITY"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/sampleimg" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="382dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:text="The Maharashtra State Tree Authority has approved the felling of 753 trees in Mumbai and Thane for two projects, including a new railway station and a private building."
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="304dp" />
</androidx.constraintlayout.widget.ConstraintLayout>