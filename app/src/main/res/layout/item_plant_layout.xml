<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"

        app:layout_constraintVertical_bias="0.38" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/sampleimg" />

            <TextView
                android:id="@+id/plantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plantImage"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:text="STATE TREE AUTHORITY"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plantDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plantName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="The Maharashtra State Tree Authority has approved the felling of 753 trees in Mumbai and Thane for two projects, including a new railway station and a private building." />


        </RelativeLayout>





    </androidx.cardview.widget.CardView>
