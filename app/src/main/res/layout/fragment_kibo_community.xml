<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.features.community.screens.KiboCommunity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/kiboCommunityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visit Kibo Community"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/kiboCommunityCard"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/kiboCommunityTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/c3"
                android:scaleType="fitXY"
                android:foreground="@drawable/overlay"
                android:alpha=".5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Top Kibos"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:fontFamily="@font/poppins_bold"

                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/kiboscloseby"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/kiboCommunityCard"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/c1"
                android:scaleType="fitXY"
                android:foreground="@drawable/overlay"
                android:alpha=".5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Kibos Close By"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:fontFamily="@font/poppins_bold"

                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kiboscloseby"
        android:layout_marginTop="8dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Start_Initiative"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="196dp"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/kiboCommunityCard"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c1"
                    android:scaleType="fitXY"
                    android:foreground="@drawable/overlay"
                    android:alpha=".65"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Start Initiative"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"

                    />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/raise_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="196dp"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/kiboCommunityCard"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/c2"
                    android:scaleType="fitXY"
                    android:foreground="@drawable/overlay"
                    android:alpha=".65"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Raise Money"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"

                    />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.appcompat.widget.LinearLayoutCompat>






</androidx.constraintlayout.widget.ConstraintLayout>